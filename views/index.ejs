<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PayPal Integration</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .product-container {
            display: flex;
            justify-content: space-around;
            margin-top: 60px; /* Adjusted to account for the cart position */
        }
        .product {
            width: 45%;
            background-color: #f0f0f0;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        .product h2 {
            margin-top: 0;
        }
        .paypal-button {
            margin-top: 10px;
        }
        .cart-container {
            position: fixed;
            top: 10px;
            right: 10px;
            text-align: center;
        }
    </style>

    <!-- Add PayPal cart script -->
    <script src="https://www.paypalobjects.com/ncp/cart/cart.js" data-merchant-id="<%= PAYPAL_MERCHANT_ID %>"></script>
</head>
<body>
  <h1>Our Android TV Boxes With Options</h1>
    <!-- Cart container at top right corner -->
    <div class="cart-container">
        <p>View Cart</p>
        <paypal-cart-button data-id="pp-view-cart"></paypal-cart-button>
        <script>
          cartPaypal.Cart({ id: "pp-view-cart" });
        </script>
    </div>

    <!-- Products container -->
    <div class="product-container">
        <!-- Product 1 -->
        <div class="product">
            <h2>Product 1</h2>
            <img src="https://github.com/kablekonnexions/kable/blob/main/public/Images/box%201.jpg?raw=true" alt="Product 1 Image" width="200" height="150">
            <p>Price: ₹5000</p>
            <p>Click to add to cart</p>
            <div class="paypal-button">
                <paypal-add-to-cart-button data-id="<%= PRODUCT_1_ID %>"></paypal-add-to-cart-button>
                <script>
                  cartPaypal.AddToCart({ id: "<%= PRODUCT_1_ID %>" });
                </script>
            </div>
        </div>

        <!-- Product 2 -->
        <div class="product">
            <h2>Product 2</h2>
            <img src="https://github.com/kablekonnexions/kable/blob/main/public/Images/box%202.jpg?raw=true" alt="Product 2 Image" width="200" height="150">
            <p>Price: ₹10000</p>
            <p>Click to add to cart</p>
            <div class="paypal-button">
                <paypal-add-to-cart-button data-id="<%= PRODUCT_2_ID %>"></paypal-add-to-cart-button>
                <script>
                  cartPaypal.AddToCart({ id: "<%= PRODUCT_2_ID %>" });
                </script>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer style="background-color: #333; color: white; text-align: center; padding: 10px; position: fixed; bottom: 0; width: 100%;">
        <p>
            <a href="/contact">Contact Us</a> |
            <a href="/shipping">Shipping Policy</a> |
            <a href="/terms">Terms and Conditions</a> |
            <a href="/refunds">Cancellations and Refunds</a> |
            <a href="/privacy">Privacy Policy</a>
        </p>
    </footer>

</body>
</html>
